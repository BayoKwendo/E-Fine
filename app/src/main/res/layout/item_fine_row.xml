<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:background="@color/colorAccentsS"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_fine_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Pay these Fine!"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_forum_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="General cancer discussions forum"
        android:layout_below="@+id/tv_fine_name"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:maxLines="4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/tv_forum_desc"
        android:layout_marginTop="3dp"/>

</RelativeLayout>